<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/gamesBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center_vertical"
            app:contentInsetLeft="@dimen/empty_dimen"
            app:contentInsetStart="@dimen/empty_dimen"
            app:contentInsetStartWithNavigation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.cpinto.gamecatalog.application.fonts.SanFrancisco
                    android:id="@+id/txtHeaderBarTitle"
                    android:layout_width="@dimen/empty_dimen"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_24dp"
                    android:layout_marginRight="@dimen/dimen_24dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_24sp" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/headerBarFilter"
                    android:layout_width="50dp"
                    android:layout_height="@dimen/dimen_50dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:src="@drawable/filter_img">


                </androidx.appcompat.widget.AppCompatImageButton>

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

</androidx.constraintlayout.widget.ConstraintLayout>