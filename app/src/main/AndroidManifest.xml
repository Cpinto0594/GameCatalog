<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cpinto.gamecatalog">


    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:enabled="true"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths"/>
        </provider>

        <activity
            android:name=".application.activity.splash.SplashScreenActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".application.activity.onboarding.OnBoardingActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.FullScreen" />

        <activity
            android:name=".application.activity.games.MainGamesActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".application.activity.gamesfilter.GameFiltersActivity"
            android:launchMode="singleTop" />

        <activity
            android:name=".application.activity.gamedetail.GameDetailActivity"
            android:launchMode="singleTop" />

        <activity
            android:name=".application.activity.filteredgames.FilteredGamesActivity"
            android:launchMode="singleTop" />
    </application>

</manifest>